<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="box" id="heading">
        <h1><%= kindofDay %> </h1>
    </div>
    <div class="box">
            <% NewListItem.forEach(function(item){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="DeleteItem" value = "<%=item._id%>" onChange="this.form.submit()">
                        <p><%= item.name%></p>
                    </div>
                    <input type="hidden" name="Deletelist" value="<%=kindofDay%>"></input>
                </form>
            <% }) %>
            <form class= "item" action="/" method="post" >
                <input type="text" name="ItemInput" placeholder="New Item" autocomplete="off">
                <button type="submit" name="SubmitButton" value="<%=kindofDay%>">+</button>
            </form>
    </div>
    
   
</body>
</html>